  <!-- Model Version -->
  <modelVersion>4.0.0</modelVersion>

  <!-- Artifact Configuration -->
  <groupId>org.arquillian.algeron</groupId>
  <artifactId>arquillian-algeron-parent</artifactId>
  <version>2.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>Arquillian Algeron Extension</name>
  <url>http://arquillian.org</url>
  <description>Arquillian Algeron Extension to run consumer-driven contracts with Pact and explore other approaches
  </description>

  <developers>
    <developer>
      <id>arquillian.org</id>
      <name>Arquillian Community</name>
      <organization>arquillian.org</organization>
      <organizationUrl>http://arquillian.org</organizationUrl>
    </developer>
  </developers>

  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git://git@github.com:arquillian/arquillian-algeron.git</connection>
    <developerConnection>scm:git:ssh://github.com/arquillian/arquillian-algeron.git</developerConnection>
    <url>git://github.com/arquillian/arquillian-algeron.git</url>
    <tag>HEAD</tag>
  </scm>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/arquillian/arquillian-algeron/issues</url>
  </issueManagement>

  <properties>
    <version.arquillian_core>1.2.0.Final</version.arquillian_core>
    <version.pact>3.6.15</version.pact>

    <!-- Requirement from pact to run-->
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <version.guava-retrying>2.0.0</version.guava-retrying>
    <version.httpclient>4.5.2</version.httpclient>
    <version.minimal-json>0.9.5</version.minimal-json>

    <version.jgit>4.10.0.201712302008-r</version.jgit>
    <version.slf4j-api>1.7.21</version.slf4j-api>
    <version.snakeyaml>1.31</version.snakeyaml>
    <version.wiremock>2.22.0</version.wiremock>

    <version.jcip-annotations>1.0</version.jcip-annotations>

    <version.junit>4.12</version.junit>
    <version.mockito>2.25.1</version.mockito>
    <version.assertj>3.12.0</version.assertj>
    <version.shrinkwrap.resolvers>2.2.6</version.shrinkwrap.resolvers>
    <version.rest-assured>4.1.1</version.rest-assured>
    <version.arquillian.recorder>1.1.6.Final</version.arquillian.recorder>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.jboss.arquillian</groupId>
        <artifactId>arquillian-bom</artifactId>
