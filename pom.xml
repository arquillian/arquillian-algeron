      <dependency>
        <groupId>com.github.rholder</groupId>
        <artifactId>guava-retrying</artifactId>
        <version>${version.guava-retrying}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.httpcomponents</groupId>
