      </dependency>
      <dependency>
        <groupId>org.arquillian.algeron</groupId>
        <artifactId>arquillian-algeron-pact-provider-spi</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.arquillian.algeron</groupId>
        <artifactId>arquillian-algeron-consumer-spi</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
